
{
    "jest": {
      "testEnvironment": "node",
      "testMatch": [
        "**/*.test.js"
      ],


      "transform": {
        "^.+\\.jsx?$": "babel-jest",
        "^.+\\.tsx?$": "ts-jest",
        "^.+\\.mjs$": "babel-jest"
      },
      "moduleFileExtensions": [
        "js",
        "json",
        "jsx",
        "ts",
        "tsx",
        "node",
        "mjs"
      ],
      "esModuleInterop": true

    }
  }
  